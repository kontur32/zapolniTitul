<queries>
  <query>
    <id>_t24_userID</id>
    <text>"http://portal.titul24.ru/wp-json/wp/v2/users/" || ./child::*/userid/text()</text>
  </query>
  <query>
    <id>_t24_ID_Признак</id>
    <text>./child::*/table/row/cell[ @label = "id"]/text()</text>
  </query>
  <query>
    <id>_t24_ID_generateNew</id>
    <text>"http://titul24.ru/items/Reports#" || random:uuid()</text>
  </query>
  <query>
    <id>_t24_label_Признак</id>
    <text>./child::*/table/row/cell[ @label = "label" ]/text()</text>
  </query>
  <query>
    <id>_t24_label_Название</id>
    <text>./child::*/table/row/cell[ @label = "Название" ]/text()</text>
  </query>
  <query>
    <id>_t24_Фамилия_И_О</id>
    <text>
      let $a := ./child::*/table/row/cell 
      return 
        $a[ @label = "Фамилия" ] || " " || 
        substring( $a[ @label = "Имя" ], 1, 1 ) || "." ||
        substring( $a[ @label = "Отчество" ], 1, 1 ) || "."   
    </text>
  </query>
  <query>
    <id>_t24_Фамилия_Имя_Отчество</id>
    <text>
      let $a := ./child::*/table/row/cell 
      return 
        $a[ @label = "Фамилия" ] || " " || 
        $a[ @label = "Имя" ] || " " ||
        $a[ @label = "Отчество" ]  
    </text>
  </query>
   <query>
    <id>_t24_Фамилия_Имя_Отчество_schema.org</id>
    <text>
      let $a := ./child::*/table/row/cell 
      return 
        $a[ @label = "https://schema.org/familyName" ] || " " || 
        $a[ @label = "https://schema.org/givenName" ] || " " ||
        $a[ @label = "https://schema.org/additionalName" ]  
    </text>
  </query>
  <query>
    <id>_t24_Год_Номер_ФИО</id>
    <text>
      let $a := ./child::*/table/row/cell 
      return 
        $a[ @label = "Год" ] || " " || 
        $a[ @label = "Номер" ] || " " ||
        $a[ @label = "ФИО" ]  
    </text>
  </query>
  <query>
    <id>_t24_ID_uuidWithNamespace</id> <!-- Интеллигенция и мир -->
    <text>
      ./child::*/table/row/cell[ @label = "Пространство имен" ] || random:uuid()
    </text>
  </query>
  <query>
    <id>_t24_date_schema.org</id> 
    <text>
       ./child::*/table/row/cell[ @label = "https://schema.org/Date" ]/text()
    </text>
  </query>
  <query>
    <id>_t24_lipers_OO</id>
    <text>
      let $a := ./child::*/table/row/cell 
      return 
        $a[ @label = "дата" ] || " " || 
        $a[ @label = "ОО" ]  || " " ||
        $a[ @label = "предмет" ]
    </text>
  </query>
</queries>
